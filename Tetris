//부모블럭 클래스

class Block {
protected:
	int shape[4][4][4];
	int x;
	int y;
	int rotationCount;

public:
	int getShape(int rotationCount, int y, int x) {
		return shape[rotationCount][y][x];
	}

	int getX() {
		return x;
	}
	int getY() {
		return y;
	}

	int getRotationCount() {
		return rotationCount;
	}

	void down() {
		y++;
	}
	void left() {
		x--;
	}
	void right() {
		x++;
	}
	void rotate() {
		rotationCount = (rotationCount + 1) % 4;
	}//0,1,2,3 으로 회전 표현


};
//대소문자가 다르다. 1번 블록 클래스
class Block1 :public Block {
public:

	Block1() {
		x = TABLE_X / 2 - 3;
		y = 1;
		rotationCount = 0;
		for (int i = 0; i < 4; i++) {
			for (int j = 0; j < 4; j++) {
				for (int k = 0; k < 4; k++) {
					shape[i][j][k] = block1[i][j][k];
				}
			}
		}

	}
};

// 2번 블록 클래스
